{
  "name": "proto-to-diagram-lib",
  "version": "1.0.0",
  "description": "Convert Protocol Buffer definitions to PlantUML diagrams - Core library for proto2diagram",
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./index.d.ts"
    }
  },
  "files": [
    "*.js",
    "*.d.ts",
    "README.md",
    "package.json"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "protobuf",
    "protocol-buffers",
    "plantuml",
    "diagram",
    "visualization",
    "uml",
    "converter",
    "library",
    "javascript"
  ],
  "author": "Room-Elephant",
  "license": "MIT",
  "homepage": "https://github.com/Room-Elephant/proto2diagram#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Room-Elephant/proto2diagram.git",
    "directory": "."
  },
  "bugs": {
    "url": "https://github.com/Room-Elephant/proto2diagram/issues"
  },
  "scripts": {
    "test": "node src/tests/runTests.js",
    "test:jest": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "eslint src lib --ext .js",
    "format": "prettier --write .",
    "example": "node ./example/example.js"
  },
  "dependencies": {
    "pako": "^2.1.0",
    "protobufjs": "^7.5.3"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "eslint": "^9.32.0",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^29.7.0"
  },
  "jest": {
    "preset": "@jest/preset-default",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "transform": {},
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!coverage/**",
      "!tests/**"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "verbose": true
  }
}
